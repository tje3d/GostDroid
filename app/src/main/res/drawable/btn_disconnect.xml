<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/btn_disconnect_glow"/>
                    <size android:width="130dp" android:height="130dp"/>
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/btn_disconnect_pressed"/>
                    <stroke android:width="2dp" android:color="@color/btn_disconnect_border"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/btn_disconnect_glow"/>
                    <size android:width="130dp" android:height="130dp"/>
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/btn_disconnect_normal"/>
                    <stroke android:width="2dp" android:color="@color/btn_disconnect_border"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>