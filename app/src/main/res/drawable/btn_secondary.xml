<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_secondary_pressed"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="@color/btn_secondary_border"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_secondary_normal"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="@color/btn_secondary_border"/>
        </shape>
    </item>
</selector>